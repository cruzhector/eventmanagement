<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.kolip.timezup.missedcallfrag">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            android:layout_width="220dp"
            android:layout_height="300dp"
            app:cardCornerRadius="10dp"
            android:elevation="30dp"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            app:cardPreventCornerOverlap="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="30dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:textSize="15dp"
                    android:ems="8"
                    android:textColor="#050505"
                    android:text="Forgot to text your friend on his birthday no worries store your message and select a social app to send message in advance we will notify you "/>
                <Button
                    android:id="@+id/tick3"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:text="tick it"
                    android:textSize="13dp"
                    android:textColor="#ffffff"
                    android:background="@drawable/buttclr"
                    android:layout_centerHorizontal="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="20dp"
                    />

            </RelativeLayout>


        </android.support.v7.widget.CardView>



    </RelativeLayout>

</FrameLayout>
