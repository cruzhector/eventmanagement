<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainback"
    tools:context="com.example.kolip.timezup.MainActivity">


   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:orientation="vertical">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timezzup"
        android:textAllCaps="true"
        android:layout_centerVertical="true"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hurry Up Every Second Counts...........!!!!"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/b1"
        />
</RelativeLayout>


       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:orientation="vertical">

           <Button
           android:id="@+id/frag1"
           android:layout_width="120dp"
           android:layout_height="30dp"
           android:text="time schedule"
               android:textSize="10dp"
           android:background="@drawable/buttclr"
               android:textColor="#ffffff"
               android:layout_marginTop="150dp"

           />

           <Button
               android:id="@+id/frag2"
               android:layout_width="120dp"
               android:layout_height="30dp"
               android:text="Custom Profile"
               android:textSize="10dp"
               android:textColor="#ffffff"
               android:layout_below="@+id/frag1"
               android:background="@drawable/buttclr"
              android:layout_marginTop="10dp"

               />

           <Button
               android:id="@+id/frag3"
               android:layout_width="120dp"
               android:layout_height="30dp"
               android:text="Custom Messaging"
               android:textSize="10dp"
               android:textColor="#ffffff"
               android:layout_below="@+id/frag2"
               android:background="@drawable/buttclr"
               android:layout_marginTop="10dp"

               />


           <android.support.design.widget.FloatingActionButton
               android:id="@+id/fab"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_margin="36dp"
               app:backgroundTint="@android:color/holo_purple"
               android:clickable="true"
               android:src="@drawable/save"
               android:layout_alignParentRight="true"
               android:layout_alignParentBottom="true"
               app:borderWidth="0dp"
               app:elevation="10dp"
               app:fabSize="auto"

              />



           <RelativeLayout
               android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="400dp">

    </RelativeLayout>


       </RelativeLayout>


   </LinearLayout>


</LinearLayout>
