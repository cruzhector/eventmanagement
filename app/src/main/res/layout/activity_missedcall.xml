<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/i1"
    tools:context="com.example.kolip.timezup.missedcall">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell Them Why You Are Busy"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Why Are You Busy ? Click Below"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_marginTop="30dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-condensed" />



        <ImageButton
            android:id="@+id/setpro"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/fab1"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_plus"
            android:layout_gravity="center_horizontal"
            />

        <android.support.v7.widget.CardView
            android:layout_width="320dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:elevation="30dp"
            android:visibility="gone"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="5dp">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_marginLeft="20dp"
           android:layout_marginRight="20dp"
           >

       <RadioButton
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_alignParentLeft="true"
           android:layout_centerVertical="true"
           android:text="Meeting"/>

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
              android:layout_centerInParent="true"
               android:layout_centerVertical="true"
               android:text="Driving"/>

           <RadioButton
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
             android:layout_alignParentRight="true"
               android:layout_centerVertical="true"
               android:text="Playing"/>


       </RelativeLayout>



        </android.support.v7.widget.CardView>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entered text will be sent to the missed caller"
       android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="15dp"
            android:layout_marginTop="20dp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-condensed" />

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:elevation="30dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textImeMultiLine"
                android:hint="start typing" />

        </LinearLayout>



    </android.support.v7.widget.CardView>


        <ImageButton
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/fab1"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_plus"
          android:layout_gravity="center_horizontal"
            />
</LinearLayout>

</LinearLayout>
