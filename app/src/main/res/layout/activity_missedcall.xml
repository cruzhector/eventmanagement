<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/i1"
    tools:context="com.example.kolip.timezup.missedcall">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule Your Meeting"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:textColor="#ffffff"
            android:textSize="30dp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-condensed" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Start time and End time "
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="15dp"
            android:layout_marginTop="10dp"
            android:textStyle="normal"
            android:fontFamily="sans-serif-condensed" />


        <ImageButton
            android:id="@+id/setpro"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background= "@drawable/fab1"
            android:layout_marginTop="20dp"
            android:src="@drawable/ic_plus"
            android:layout_gravity="center_horizontal"
            />


        <android.support.v7.widget.CardView
            android:id="@+id/setprocard1"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            android:elevation="30dp"
            android:visibility="gone"
            app:cardPreventCornerOverlap="true"
            app:cardCornerRadius="5dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/t1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/fab1">

                    <TextView
                        android:id="@+id/settm1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:textSize="10dp"
                        android:textColor="#ffffff"/>

                </RelativeLayout>

                <View
                    android:layout_width="30dp"
                    android:layout_height="1dp"
                    android:layout_centerInParent="true"
                    android:background="@android:color/background_dark"
                    ></View>

                <RelativeLayout
                    android:id="@+id/t2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/fab1">


                    <TextView
                        android:id="@+id/settm2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:layout_centerInParent="true"
                        android:textColor="#ffffff"/>

                </RelativeLayout>


            </RelativeLayout>

        </android.support.v7.widget.CardView>


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tell Them Why You Are Busy"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:textColor="#ffffff"
        android:textSize="30dp"
        android:textStyle="italic"
        android:fontFamily="sans-serif-condensed" />


        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Entered text will be sent to the missed caller"
       android:layout_gravity="center_horizontal"
        android:textColor="#ffffff"
        android:textSize="15dp"
            android:layout_marginTop="20dp"
        android:textStyle="normal"
        android:fontFamily="sans-serif-condensed" />

    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:elevation="30dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <EditText
                android:id="@+id/mess"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:inputType="textMultiLine"
                android:hint="start typing"
                android:ems="20"
                android:textSize="15dp"
            android:layout_gravity="bottom"
                android:scrollbars="vertical"/>

        </LinearLayout>



    </android.support.v7.widget.CardView>


        <ImageButton
            android:id="@+id/store"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:background="@drawable/fab2"
            android:layout_marginTop="20dp"
            android:src="@drawable/keyarrow"
          android:layout_gravity="center_horizontal"
            />
</LinearLayout>
</ScrollView>
</LinearLayout>
